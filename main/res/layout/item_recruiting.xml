<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_button_grey"
    android:layout_marginBottom="11dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="CU 정왕점"
        android:textSize="16sp"
        android:id="@+id/item_shop_name"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_shop_name"
        app:layout_constraintStart_toStartOf="@id/item_shop_name"
        android:layout_marginTop="6dp"
        android:id="@+id/item_content"
        android:textSize="12sp"
        android:text="CU 정왕점에서 주말 오후 알바생 구합니다"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="5/2"
        android:textSize="12sp"
        android:lineHeight="15px"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/item_count"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_period"
        android:text="3~6개월   | "
        android:textSize="12sp"
        android:lineHeight="15px"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/item_content"
        app:layout_constraintStart_toStartOf="@id/item_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_wage"
        android:text="시급 9,620원"
        android:textSize="12sp"
        android:lineHeight="15px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/tv_period"
        app:layout_constraintTop_toBottomOf="@id/item_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tag1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_wage"
        android:text="성별무관"
        android:textSize="10sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_period"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_30_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tag2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_wage"
        android:text="성별무관"
        android:textSize="10sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_tag1"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_30_gray"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/bg_20_yellow2"
        android:text="채 용 마 감"
        android:textSize="12sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>