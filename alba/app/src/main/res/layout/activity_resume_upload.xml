<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ResumeUploadActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/resumeUploadToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp">


        <ImageButton
            android:id="@+id/resume_img"
            android:layout_width="110dp"
            android:layout_height="115dp"
            android:src="@drawable/icon_user_profile_24" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:layout_margin="5dp">

            <TableRow
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/resume_upload_text1"
                    android:layout_height="match_parent"
                    android:text="text1"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resume_upload_text2"
                    android:text="text2"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/resume_upload_text3"
                    android:text="text3"
                    android:layout_marginBottom="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/resume_upload_text4"
                    android:text="text4"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </TableRow>

            <Button
                android:id="@+id/resume_trans"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_20_yellow2"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:text="번역하기"
                android:textStyle="bold" />



        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이력서 제목"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resume_title"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button_grey"
            android:inputType="textMultiLine"
            android:hint="  제목을 입력하세요"
            android:minLines="2"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:maxHeight="80dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="경력"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resume_career"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:gravity="top|start"
            android:background="@drawable/rectangle_button_grey"
            android:inputType="textMultiLine"
            android:hint="  경력을 입력하세요"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:maxHeight="120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="자기소개서"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resume_introduce"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:gravity="top|start"
            android:background="@drawable/rectangle_button_grey"
            android:inputType="textMultiLine"
            android:hint="  자신을 소개해보세요."
            android:minLines="5"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:maxHeight="300dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/resume_done_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/finish_button"
            android:text="완료하기"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>